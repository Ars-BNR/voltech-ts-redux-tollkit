{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./",
    "moduleDetection": "force",
    "skipLibCheck": true,
    "strict": true,
    "target": "es6",
    "noImplicitAny": true,
    "composite": true
  }
}
